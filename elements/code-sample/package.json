{
  "name": "@lrnwebcomponents/code-sample",
  "wcfactory": {
    "className": "CodeSample",
    "customElementClass": "LitElement",
    "elementName": "code-sample",
    "generator-wcfactory-version": "0.7.0",
    "useHAX": true,
    "useSass": false,
    "files": {
      "css": "src/code-sample.css",
      "scss": "src/code-sample.scss",
      "html": "src/code-sample.html",
      "js": "src/code-sample.js",
      "properties": "src/code-sample-properties.json",
      "hax": "src/code-sample-hax.json"
    },
    "sharedStyles": []
  },
  "version": "3.0.6",
  "description": "A wrapper element for highlight.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/elmsln/lrnwebcomponents.git"
  },
  "type": "module",
  "main": "code-sample.js",
  "module": "code-sample.js",
  "umd": "code-sample.umd.js",
  "scripts": {
    "start": "yarn run dev",
    "build": "gulp --gulpfile=gulpfile.cjs && rollup -c && prettier --ignore-path ../../.prettierignore --write \"**/*.{js,json}\" && wca analyze \"**/*.js\" --format vscode --outFile vscode-html-custom-data.json",
    "dev": "concurrently --kill-others \"yarn run watch\" \"yarn run serve\"",
    "watch": "gulp dev --gulpfile=gulpfile.cjs",
    "serve": "es-dev-server -c ../../es-dev-server.config.js",
    "lighthouse": "gulp lighthouse --gulpfile=gulpfile.cjs",
    "test": "web-test-runner \"test/**/*.test.js\" --node-resolve",
    "test:watch": "web-test-runner \"test/**/*.test.js\" --node-resolve --watch",
    "test:browsers": "web-test-runner \"test/**/*.test.js\" --node-resolve --playwright --browsers chromium firefox webkit"
  },
  "author": {
    "name": "btopro"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "lit-element": "2.4.0"
  },
  "devDependencies": {
    "@lrnwebcomponents/deduping-fix": "^3.0.0",
    "@lrnwebcomponents/storybook-utilities": "^3.0.6",
    "@polymer/iron-component-page": "github:PolymerElements/iron-component-page",
    "@polymer/iron-demo-helpers": "3.1.0",
    "@webcomponents/webcomponentsjs": "2.5.0",
    "concurrently": "6.0.2",
    "gulp-babel": "8.0.0",
    "lodash": "4.17.21",
    "polymer-cli": "1.9.11",
    "wct-browser-legacy": "1.0.2",
    "web-animations-js": "2.3.2",
    "@open-wc/testing": "2.5.33",
    "@web/test-runner": "0.13.3",
    "@web/test-runner-commands": "0.4.5",
    "@web/test-runner-playwright": "0.8.5",
    "@web/test-runner-puppeteer": "0.10.0"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "web-components",
    "html",
    "haxtheweb"
  ]
}
